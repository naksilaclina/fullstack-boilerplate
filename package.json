{
  "name": "@naksilaclina/monorepo",
  "version": "1.0.0",
  "description": "Monorepo with secure JWT secret generation. Run 'npm run generate-secrets' to create secure tokens.",
  "private": true,
  "workspaces": [
    "packages/apps/server",
    "packages/apps/web",
    "packages/modules/mongodb",
    "packages/modules/auth"
  ],
  "scripts": {
    "lint": "eslint .",
    "pretty": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "dev": "node bin/dev.js",
    "dev:seed": "cross-env RUN_SEED=true node bin/dev.js",
    "seed": "npm run seed --workspace=@naksilaclina/mongodb",
    "seed:force": "npm run seed:force --workspace=@naksilaclina/mongodb",
    "seed:clear": "npm run seed:clear --workspace=@naksilaclina/mongodb",
    "start": "node bin/start.js",
    "generate-secrets": "node scripts/generate-secrets.js",
    "test-secrets": "powershell -ExecutionPolicy Bypass -File scripts/test-secrets.ps1",
    "security-audit": "npm audit --audit-level moderate",
    "security-check": "npm run security-audit && npm run lint",
    "security-full-audit": "node scripts/security-audit.js",
    "security-snyk": "npx snyk test",
    "security-comprehensive": "npm run security-full-audit && npm run security-snyk && npm audit",
    "test-config": "node scripts/test-config.js",
    "validate-config": "node scripts/validate-config.js",
    "validate-env": "npx tsc --project tsconfig.json && npm run test-config",
    "build-config": "npx tsc --project tsconfig.json",
    "clean": "node scripts/clean.js"
  },
  "devDependencies": {
    "@types/joi": "^17.2.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^3.0.1",
    "joi": "^18.0.1",
    "prettier": "^2.8.3",
    "rimraf": "^6.1.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.548.0"
  }
}