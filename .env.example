# Root Environment Variables - SECURITY TEMPLATE
# Copy this file to .env and update with your secure values

# Global Configuration
NODE_ENV=development

# Server Configuration
API_PORT=5000
WEB_PORT=3000

# MongoDB Configuration
# Development: No authentication (for local development)
MONGODB_DEV_URI=mongodb://localhost:27017/naksilaclina-dev
# Production: With authentication (update credentials after running setup script)
MONGODB_URI=mongodb://your_user:your_secure_password@localhost:27017/naksilaclina?authSource=admin&ssl=true

# MongoDB Security
MONGODB_ENCRYPTION_KEY=your_64_character_encryption_key_here_replace_with_secure_random_string
MONGODB_CA_CERT_PATH=/path/to/ca-certificate.crt
MONGODB_SSL_VALIDATE=true
MONGODB_SSL_CA=/path/to/ca-certificate.crt

# JWT Configuration - GENERATE SECURE SECRETS
# Use: npm run generate-secrets
JWT_SECRET=your_jwt_secret_minimum_64_characters_replace_with_secure_random_string
JWT_REFRESH_SECRET=your_jwt_refresh_secret_minimum_64_characters_replace_with_secure_random_string
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Configuration
# For multiple origins, separate with commas: http://localhost:3000,https://yourdomain.com
CLIENT_URL=http://localhost:3000,https://yourdomain.com

# Seeding Configuration
FORCE_SEED=false

# Security Configuration
CSP_REPORT_URI=https://yourdomain.com/api/csp-report
SECURITY_LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL/TLS Configuration (Production)
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# External Services (for production monitoring)
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here

# SECURITY NOTES:
# 1. Never commit the actual .env file to version control
# 2. Use strong, randomly generated secrets for JWT tokens
# 3. Enable SSL/TLS in production
# 4. Configure proper CORS origins for your domain
# 5. Set up monitoring and logging for security events